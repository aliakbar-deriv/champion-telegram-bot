# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# WebApp Configuration
# The official Telegram Mini App URL (t.me URL) used for direct links and sharing
WEBAPP_URL=https://t.me/your_bot/your_webapp

# The actual hosting URL where your web application is deployed
WEBAPP_HOST_URL=https://your-webapp-domain.com

# Environment
NODE_ENV=development # development | staging | production

# Logging Configuration
LOG_LEVEL=DEBUG # DEBUG | INFO | WARN | ERROR | NONE (defaults to WARN in production, DEBUG in development)
